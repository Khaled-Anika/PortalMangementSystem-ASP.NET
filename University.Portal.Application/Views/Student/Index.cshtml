                                </tr>
                                <tr>
                                    <td>Student ID:</td>
                                    <td>@Model.StudentId</td>
                                </tr>
                                <tr>
                                    <td>Department:</td>
                                    <td>@Model.Department.DepartmentName</td>
                                </tr>

                                <tr>
                                    <td>Degree</td>
                                    <td>@Model.Degree.DegreeName</td>
                                </tr>

                                <tr>
                                    <td>Joining Batch</td>
                                    <td>@Model.Semester.SemesterCode @Model.Semester.year</td>
                                </tr>

