@model University.Portal.Entites.StudentEntites.Student

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
}



@section ContentHeader{
    
    <h1>
        Student
        <small>Profile</small>
     </h1>
    
    
    }

<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-2">


        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Profile Data</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="~/Content/Component/dist/img/user2-160x160.jpg" class="img-circle img-responsive"> </div>

                    <div class=" col-md-9 col-lg-9 ">
