@*@model IEnumerable<University.Portal.Entites.CourseEntites.Course>*@

@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<section class="content container-fluid">
    <section class="content-header">
        <h1>
            Course
            <small>Details</small>
        </h1><br />

    </section>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">

        </div>
    </div><br /><br />
    <p>@ViewBag.Success</p>
    <div class="row">
        <div class="col-md-8 col-md-offset-1">

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">All Courses</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered success" id="myTable">
                        <thead>
                            <tr>
                                <th>
                                    Course Code
                                </th>
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Credit
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>

                        @*@foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                @Html.DisplayFor(modelItem => item.CourseCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "CourseUpdate", new { id = item.CourseId })

                                </td>
                                </tr>
                                }*@

                    </table>
                    @* Load datatable css *@
                    <link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
                    @* Load datatable js *@
                    @section Scripts{
                        <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
                        <script>
                            $(document).ready(function () {
                                $('#myTable').DataTable({
                                    "ajax": {
                                        "url": "/Admin/CourseDataLoad",
                                        "type": "GET",
                                        "datatype": "json"
                                    },
                                    "columns": [
                                        { "data": "CourseCode", "autoWidth": true },
                                        { "data": "CourseName", "autoWidth": true },
                                        { "data": "Credit", "autoWidth": true },
                                        {
                                            "data": "CourseId",
                                            "mRender": function (data, type, full) {
                                                return '<a href="/Admin/CourseUpdate/' + data + '">Update</a>';
                                            }
                                        }
                                    ]
                                });
                            });
                        </script>
                    }
                </div>
                <!-- /.box-body -->
            </div>

        </div>
    </div>

</section>
