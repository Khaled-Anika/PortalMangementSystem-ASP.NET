@model University.Portal.Entites.DepartmentEntites.Department

@{
    ViewBag.Title = " ";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            New
            <small>Department</small>
        </h1>

    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">

            <div class="col-lg-7 col-md-offset-0">
                <div class="login-box-body">
                    <p class="login-box-msg">Add Department</p>
                    <p>@ViewBag.success</p>
                    @using (Html.BeginForm("AddDepartment", "Admin", FormMethod.Post, new { onSubmit = "return FormSubmit(this)" }))
                    {
                        @Html.AntiForgeryToken()
                        <label>Department Name: </label>
                        <input type="text" class="form-control form-group has-feedback" name="DepartmentName" placeholder="Department Name">


                        <div class="row">

                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-danger  btn-flat">Submit</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }



                </div>
            </div>
        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
