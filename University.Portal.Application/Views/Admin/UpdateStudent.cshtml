@model University.Portal.Entites.StudentEntites.Student

@{
    ViewBag.Title = " ";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Update
                    <small>Student</small>
                </h1>

            </section>

            <!-- Main content -->
            <section class="content container-fluid">
                <div class="row">

                    <div class="col-lg-5 col-md-offset-3">
                        <div class="login-box-body">
                            <p class="login-box-msg">Update student</p>



                            @using (Html.BeginForm("UpdateStudent", "Admin", FormMethod.Post, new { onSubmit = "return FormSubmit(this)" }))
                            {
                                @Html.AntiForgeryToken()
                                @*<form action="" method="post">*@
                                <div class="form-group has-feedback">
                                    <label>First Name: </label>
                                    <input type="text" class="form-control" value=@Model.FirstName name="FirstName">
                                </div>
                                <div class="form-group has-feedback">
                                    <label>Student Id: </label>
                                    <input type="hidden" class="form-control" value=@Model.StudentId name="StudentId">
                                </div>
                                <div class="form-group has-feedback">
                                    <label>Middle Name: </label>
                                    <input type="text" class="form-control" value=@Model.MiddleName name="MiddleName">
                                </div>
                                <div class="form-group has-feedback">
                                    <label>Last Name: </label>
                                    <input type="text" class="form-control" value=@Model.LastName name="LastName">
                                </div>
                                <label>Department Name: </label>
                                <select class="form-control form-group has-feedback" name="DepartmentId">
                                    @foreach (var item in Model.departments)
                                    {
                                        <option value=@item.DepartmentId>@item.DepartmentName</option>
                                    }
                                </select>
                                <label>Degree Name: </label>
                                <select class="form-control form-group has-feedback" name="DegreeId">
                                    @foreach (var item in Model.degrees)
                                    {
                                        <option value=@item.DegreeId>@item.DegreeName</option>
                                    }
                                </select>
                                <label>Semester: </label>
                                <select class="form-control form-group has-feedback" name="JoingBatch">
                                    @foreach (var item in Model.semesters)
                                    {
                                        <option value=@item.SemesterId>@item.SemesterCode @item.year</option>
                                    }
                                </select>


                                <div class="row">

                                    <!-- /.col -->
                                    <div class="col-xs-4">
                                        <button type="submit" class="btn btn-danger  btn-flat">Submit</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                @*</form>*@
                            }



                        </div>
                    </div>
                </div>

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

       <!-- ./wrapper -->


