@model University.Portal.Entites.StudentEntites.Student

@{
    ViewBag.Title = " ";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            New
            <small>Student</small>
        </h1>

    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">

            <div class="col-lg-7 col-md-offset-0">
                <div class="login-box-body">
                    <p class="login-box-msg">Add new student</p>

                    @using (Html.BeginForm("AddStudent", "Admin", FormMethod.Post, new { onSubmit = "return FormSubmit(this)" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group has-feedback">
                            <label>First Name:</label>
                            <input type="text" class="form-control" placeholder="First Name" name="FirstName">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Middle Name:</label>
                            <input type="text" class="form-control" placeholder="Middle Name" name="MiddleName">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Last Name:</label>
                            <input type="text" class="form-control" placeholder="Last Name" name="LastName">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Student Id:</label>
                            <input type="text" class="form-control" placeholder="ID" name="StudentId">
                        </div>
                        <label>Department: </label>
                        <select class="form-control form-group has-feedback" name="DepartmentId">
                            @foreach (var item in ViewBag.departments)
                            {
                                <option value=@item.DepartmentId>@item.DepartmentName</option>
                            }
                        </select>
                        <label>Degree: </label>
                        <select class="form-control form-group has-feedback" name="DegreeId">
                            @foreach (var item in ViewBag.degrees)
                            {
                                <option value=@item.DegreeId>@item.DegreeName</option>
                            }
                        </select>
                        <label>Semester: </label>
                        <select class="form-control form-group has-feedback" name="JoiningBatch">
                            @foreach (var item in ViewBag.semesters)
                            {
                                <option value=@item.SemesterId>@item.SemesterCode @item.year</option>
                            }
                        </select>


                        <div class="row">

                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-danger  btn-flat">Submit</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }



                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->